# .env.example - Simplified PAMDes Configuration

APP_NAME="PAMDes Management"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

# Domain Configuration (Production)
PAMDES_MAIN_DOMAIN=pamdes.example.com
PAMDES_SUPER_ADMIN_DOMAIN=admin.pamdes.example.com
PAMDES_VILLAGE_PATTERN={village}.pamdes.example.com

# Domain Configuration (Development)
# PAMDES_MAIN_DOMAIN=localhost:8000
# PAMDES_SUPER_ADMIN_DOMAIN=admin.localhost:8000
# PAMDES_VILLAGE_PATTERN={village}.localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pamdes_db
# DB_USERNAME=pamdes_user
# DB_PASSWORD=

# PAMDes Configuration
PAMDES_DEFAULT_ADMIN_FEE=5000
PAMDES_DEFAULT_MAINTENANCE_FEE=2000
PAMDES_AUTO_GENERATE_BILLS=true

# Cache Configuration
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@pamdes.local"
MAIL_FROM_NAME="PAMDes Management"

# File Storage
FILESYSTEM_DISK=local