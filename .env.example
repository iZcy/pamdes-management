APP_NAME="PAMDes Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://pamdes.local
APP_DOMAIN=localhost

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pamdes_db
DB_USERNAME=pamdes_user
DB_PASSWORD=secure_password

# PAMDes Configuration (Independent System)
PAMDES_INDEPENDENT=true
PAMDES_DEFAULT_ADMIN_FEE=5000
PAMDES_DEFAULT_MAINTENANCE_FEE=2000

# Feature Flags (Independent System)
PAMDES_AUTO_GENERATE_BILLS=true
PAMDES_NOTIFICATIONS_ENABLED=true
PAMDES_EXTERNAL_SYNC_DISABLED=true

# Cache Configuration
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@pamdes.local
MAIL_PASSWORD=mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pamdes.local
MAIL_FROM_NAME="PAMDes Management"

# Filament Configuration
FILAMENT_DOMAIN=pamdes.local

# File Storage
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_DRIVER=log

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379